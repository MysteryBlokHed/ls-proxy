{
  "$schema": "https://json.schemastore.org/package",
  "name": "ls-proxy",
  "version": "0.1.0",
  "description": "Wrapper around localStorage to easily store JSON objects",
  "repository": "https://gitlab.com/MysteryBlokHed/ls-proxy",
  "homepage": "https://gitlab.com/MysteryBlokHed/ls-proxy",
  "author": "Adam Thompson-Sharpe",
  "license": "MIT",
  "files": [
    "lib/**/*",
    "LICENSE",
    "README.md"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc && node update-dts.js && webpack",
    "dev": "nodemon -w src -e ts --exec \"yarn build || exit 1\"",
    "lint": "prettier \"**/*.{js,ts,json,md,yml}\"",
    "doc": "typedoc",
    "release": "yarn build --mode production && git add . && git commit -m \":bookmark: Release <version>\" --edit"
  },
  "devDependencies": {
    "@types/greasemonkey": "^4.0.2",
    "greasetools": "^0.2.0",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "terser-webpack-plugin": "^5.2.4",
    "typedoc": "^0.22.11",
    "typescript": "^4.4.4",
    "webpack": "^5.58.2",
    "webpack-cli": "^4.9.1"
  }
}
